---
import Logo from "../Nav/logo.astro";
import SocialMedia from "./social-media.astro";
import Separator from "./separator.astro";
import GoToTopButton from "../goToTopButton.astro";
import Form from "./form.tsx";
---

<footer
  id="footer"
  class="bg-primary text-[white] px-10 pt-[18px] pb-20 relative"
>
  <section
    class="lg:mx-60 md:mx-30 mx-0 flex md:flex-row flex-col-reverse gap-5"
  >
    <div class="flex-[1]">
      <div class="flex items-center justify-center">
        <Logo width={200} height={200} />
      </div>
      <div>
        <p>Ricardo Margáin 335</p>
        <p>Col. Valle del Campestre</p>
        <p>San Pedro Garza García, Nuevo León</p>
        <p class="my-10">Tel: (81) 8000 5700</p>
        <p>contacto@adobse.mx</p>
        <p>proyectos@adobse.mx</p>
      </div>
    </div>
    <div class="flex-[1]">
      <h1 class="text-xl mb-5">Cuéntanos sobre tu proyecto</h1>
      <Form />
    </div>
  </section>
  <hr class="my-5" />
  <section class="flex md:flex-row flex-col gap-3 items-center justify-between">
    <div class="flex">
      <span>©&nbsp;2024 Gilbane, All rights reserved</span>
      <Separator />
      <ul class="grid lg:grid-cols-5 md:grid-cols-3 grid-cols-2">
        <li>
          <a href="https://www.gilbaneco.com/privacy-policy/">Privacy Policy</a>
        </li>
        <Separator />
        <li>
          <a href="https://www.gilbaneco.com/terms-of-use/">Terms of Use</a>
        </li>
        <Separator />
        <li>
          <a href="https://www.gilbaneco.com/site-map/">Site Map</a>
        </li>
      </ul>
    </div>
    <ul class="flex gap-3">
      <SocialMedia
        icon="fa-facebook"
        href="https://www.facebook.com/"
        alt="Facebook"
      />
      <SocialMedia
        icon="fa-x-twitter"
        href="https://www.x.com/"
        alt="Twitter-X"
      />
      <SocialMedia
        icon="fa-instagram"
        href="https://www.instagram.com/"
        alt="Instagram"
      />
      <SocialMedia
        icon="fa-linkedin"
        href="https://www.linkedin.com/"
        alt="LinkedIn"
      />
    </ul>
  </section>
  <section class="fixed bottom-[20px] right-[50px]">
    <GoToTopButton />
  </section>
</footer>
