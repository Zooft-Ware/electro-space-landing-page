---
import Card from "../Card.astro";
import Fade from "../fade.astro";
import OverlayImage from "../overlayImage.astro";
---

<Fade id="projects">
  <section id="projects" class="pb-8 md:px-10 px-5">
    <h1
      class="text-3xl text-center py-5"
      style="font-family: 'LEMONMILK-Regular';"
    >
      ALGUNOS DE NUESTROS CLIENTES
    </h1>
    <div
      class="grid lg:grid-cols-2 md:grid-cols-2 grid-cols-1 gap-10 justify-center item-center"
    >
      <Card
        title="Supermercado"
        subtitle="SuperMercados"
        imgSrc="images/proyectos/proyecto1.jpg"
      >
        <OverlayImage
          slot="overlay"
          src="images/proyectos/overlay_image1.png"
          top="25%"
          left="32.5%"
          class="w-[35%] h-[200px]"
        />
      </Card>
      <Card
        title="Petro Seven"
        subtitle="Oficinas y gasolineras"
        imgSrc="images/proyectos/proyecto2.jpg"
      >
        <OverlayImage
          slot="overlay"
          src="images/proyectos/overlay_image2.png"
          top="30%"
          left="20%"
          class="w-[60%] h-[120px]"
        />
      </Card>
      <Card
        title="Akron"
        subtitle="Gasolineras"
        imgSrc="images/proyectos/proyecto3.jpg"
      >
        <OverlayImage
          slot="overlay"
          src="images/proyectos/overlay_image3.png"
          top="35%"
          left="12.5%"
          class="w-[75%] h-[100px]"
        />
      </Card>
      <Card
        title="Restaurantes"
        subtitle="Pizza hut"
        imgSrc="images/proyectos/proyecto4.jpg"
      >
        <OverlayImage
          slot="overlay"
          src="images/proyectos/overlay_image4.png"
          top="42%"
          left="1%"
          class="w-[98%] h-[100px]"
        />
      </Card>
    </div>
  </section>
</Fade>
