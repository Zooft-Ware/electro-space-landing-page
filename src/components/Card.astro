---
import { Image } from "astro:assets";
interface Props {
  title: string;
  imgSrc: string;
  subtitle?: string;
  titleColor?: string;
  subtitleColor?: string;
}

const { title, subtitle, imgSrc, titleColor, subtitleColor } = Astro.props;
---

<div>
  <a
    class="card"
    href="https://www.gilbaneco.com/building/services/construction-management/"
  >
    <div>
      <Image
        alt="card"
        fetchpriority="high"
        decoding="async"
        src={imgSrc}
        class="object-cover object-center w-full h-[400px]"
        width={400}
        height={400}
      />
    </div>

    <div class="mt-5">
      <h3 class="text-2xl" style={titleColor ? `color: ${titleColor}` : ""}>
        {title}
      </h3>

      <div>
        <span
          class="text-xl"
          style={subtitleColor ? `color: ${subtitleColor}` : ""}
          }>{subtitle}</span
        >
      </div>
    </div>
  </a>
  <slot />
</div>
