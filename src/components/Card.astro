---
interface Props extends Pick<astroHTML.JSX.ImgHTMLAttributes, "alt"> {
  title: string;
  imgSrc: string;
  subtitle?: string;
  titleColor?: string;
  subtitleColor?: string;
  disableHoverTransition?: boolean;
}

const {
  title,
  subtitle,
  imgSrc,
  titleColor,
  subtitleColor,
  alt,
  disableHoverTransition,
} = Astro.props;
---

<div>
  <a class="card">
    <div class="overflow-hidden relative">
      <img
        alt={alt ?? "card"}
        fetchpriority="high"
        decoding="async"
        src={imgSrc}
        class={`object-cover object-center w-full h-[400px] ${disableHoverTransition ? "" : "transition-transform hover:scale-125"}`}
        width={400}
        height={400}
        loading="lazy"
      />
      <slot name="overlay" />
    </div>

    <div class="mt-5">
      <h3
        class="text-2xl text-center"
        style={titleColor ? `color: ${titleColor}` : ""}
      >
        {title}
      </h3>

      <div>
        <span
          class="text-xl"
          style={subtitleColor ? `color: ${subtitleColor}` : ""}
          }>{subtitle}</span
        >
      </div>
    </div>
  </a>
  <slot />
</div>
